<%= form_with model: @article do |f| %>
  <div class="flex flex-col gap-2">
    <div class="flex flex-col gap-2">
      <%= f.label :title, class:"text-gray-500 text-lg" %>
      <%= f.text_field :title, class:"rounded border border-orange-600" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= f.label :body, class:"text-gray-500 text-lg" %>
      <%= f.text_area :body, class:"rounded border border-orange-600" %>
    </div>
  </div>
  <br />
  <%= f.submit %>
<% end %>